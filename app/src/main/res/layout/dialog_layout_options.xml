<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_bg"
    android:elevation="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Report?"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Transcript Text -->
    <TextView
        android:id="@+id/transcriptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No transcription available"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent" />

    <!-- Countdown Message -->
    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report will automatically be submitted in"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"/>

    <!-- Countdown Timer -->
    <TextView
        android:id="@+id/countdownText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sending in 10s"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="23sp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_rounded_red"/>

        <Button
            android:id="@+id/discardBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            android:textSize="23sp"
            android:layout_marginStart="8dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_rounded_gray"/>

    </LinearLayout>
</LinearLayout>