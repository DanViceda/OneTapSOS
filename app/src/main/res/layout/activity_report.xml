<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Navbar / Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@color/white">

            <!-- ðŸ”™ Back Button -->
            <ImageButton
                android:id="@+id/backButtonReport"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="7dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Scroll Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Heading: Your report -->
                <TextView
                    android:id="@+id/headerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Your report"
                    android:textColor="@color/red"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Horizontal Scrollable Buttons -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- All Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonAll"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_light_gray"
                            android:text="All"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:stateListAnimator="@null" />

                        <!-- âœ… Pending Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonPending"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_light_gray"
                            android:text="Pending"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:stateListAnimator="@null" />

                        <!-- In Progress Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonInProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_light_gray"
                            android:text="In Progress"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:stateListAnimator="@null" />

                        <!-- Rejected Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_light_gray"
                            android:text="Rejected"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:stateListAnimator="@null" />

                        <!-- Resolved Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonResolved"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/button_light_gray"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:stateListAnimator="@null"
                            android:text="Resolved"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- No report found text -->
                <TextView
                    android:id="@+id/noReportText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="No report found."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
