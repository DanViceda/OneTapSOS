<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.OneTapSOS" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary app colors -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar and nav bar -->
        <item name="android:statusBarColor">@color/red</item>
        <item name="android:navigationBarColor">@color/red</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Button style override -->
        <item name="buttonStyle">@style/NeutralButtonStyle</item>
    </style>

    <!-- Custom button style -->
    <style name="NeutralButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Final app theme -->
    <style name="Theme.OneTapSOS" parent="Base.Theme.OneTapSOS" />

</resources>